<div class="container">
  
  <%= form_for Todo.new, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    <div class="row my-4 align-items-center">
      <%= f.hidden_field :user_id, value: "1" %>
        <div class="col-2"><h3><label for="content">New TODO</label></h3></div>
        <div class="col-8"><%= f.text_field :content, class: "form-control" %></div>
        <div class="col-2"><%= f.submit "Create", class: "btn btn-primary w-100" %></div>
    </div>
  <% end %>

  <% @todos.each do |todo| %>
    <div class="row my-4 align-items-center">
      <div class="col-2" id="button<%= todo.id %>">
        <% if todo.confirm %>
          <%= icon('far', 'check-circle', class: 'fa-2x') %>
        <% else %>
          <%= icon('far', 'circle', class: 'fa-2x') %>
        <% end %>
      </div>  
      <div class="col-6"><%= todo.content %></div>
      <div class="col-2"><%= link_to(icon('far', 'edit', class: 'fa-2x'), todos_edit_path(todo.id)) %></div>
      <div class="col-2"><%= link_to(icon('far', 'trash-alt', class: 'fa-2x'), todo_path(todo.id), method: :delete) %></div>
    </div>
  <% end %>

</div>